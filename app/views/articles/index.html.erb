<h1>Articles </h1>
<table class="table table-striped">
<thead class="thead-dark">	
<tr>
	<th>ID</th>
	<th>Title</th>
	<th>Body</th>
<tr>
</thead>
<tbody>
<tr>
<% @articles.each do |article| %>
    <td><%= article.id %></td>
    <td><%= article.title %></td>
    <td><%= article.body %></td> 
    <td><%= link_to 'show', article_path(article), class:"btn btn-info"%></td>
    <td><%= link_to "Edit", edit_article_path(article), class:"btn btn-secondary"%></td>
   
   <td> <%= link_to "Destroy", article_path(article), data: { turbo_method: :delete,turbo_confirm: "Are you sure?"},class:"btn btn-danger" %></td>
</tr>   
	<%end%>
</tbody>
</table>



<br>
<br>
<%= link_to "New Article", new_article_path, class:"btn btn-primary"%>